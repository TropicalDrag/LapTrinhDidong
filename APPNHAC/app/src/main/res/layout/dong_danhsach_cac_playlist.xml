<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="15dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imageviewdanhsachcacplaylist"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:textStyle="bold"
                android:paddingTop="2dp"
                android:paddingLeft="15dp"
                android:id="@+id/textviewtendanhsachcacplaylist"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:lines="2"
                android:maxWidth="200dp"
                android:maxLines="2"
                android:text="My music "
                android:textColor="#ED0D0D"
                android:textSize="20sp"

                />

        </FrameLayout>

    <TextView
        android:id="@+id/textviewdanhsachcacplaylist"
        android:ellipsize="end"
        android:maxLines="2"
        android:lines="2"
        android:maxWidth="200dp"
        android:gravity="left"
        android:textColor="#060606"
        android:textSize="15sp"
        android:text="Nhac Viet Hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13sp"
        android:text="Various Artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>